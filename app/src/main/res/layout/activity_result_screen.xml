<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    android:foregroundTint="#BF0606"
    tools:context=".ResultScreen">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="297dp"
        android:layout_height="181dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#1D1C1C"
        android:max="100"
        android:progress="75"
        android:progressTint="#E2DDDD"
        android:scaleY="8"
        android:secondaryProgressTint="#EAEAEA"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="282dp"
        android:layout_height="89dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center|top"
        android:text="Your Accuracy was xx%"
        android:textColor="#DDDDDD"
        android:textColorHighlight="#DDDDDD"
        android:textColorHint="#DDDDDD"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="225dp"
        android:layout_height="123dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/ubuntu_medium"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#DDDDDD"
        android:textColorHighlight="#DDDDDD"
        android:textColorHint="#DDDDDD"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14"
        tools:text="Score X/5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="153dp"
        android:layout_height="57dp"
        android:layout_marginBottom="76dp"
        android:background="#CDC6C6"
        android:backgroundTint="#3B3737"
        android:fontFamily="@font/ubuntu_mono"
        android:text="ReAttempt"
        android:textSize="20dp"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>