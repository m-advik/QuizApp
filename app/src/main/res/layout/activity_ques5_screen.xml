<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    tools:context=".Ques5Screen">

    <TextView
        android:id="@+id/ques1View"
        android:layout_width="337dp"
        android:layout_height="212dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="THE QUES GOES HERE"
        android:padding="10dp"
        android:text="Loading..."
        android:textColor="#F9FBFF"
        android:textColorHighlight="#F9FBFF"
        android:textColorHint="#F9FBFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ques1RG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <RadioGroup
        android:id="@+id/ques1RG"
        android:layout_width="343dp"
        android:layout_height="111dp"
        android:layout_marginBottom="156dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/true1Button"
            android:layout_width="120dp"
            android:layout_height="61dp"
            android:layout_gravity="top"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:text="True"
            android:textColor="#4CAF50"
            android:textColorHighlight="#4CAF50"
            android:textColorHint="#4CAF50"
            android:textSize="20dp"
            android:translationX="-30dp" />

        <RadioButton
            android:id="@+id/false1Button"
            android:layout_width="120dp"
            android:layout_height="61dp"
            android:layout_gravity="top"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:text="False"
            android:textColor="#F44336"
            android:textColorHighlight="#F44336"
            android:textColorHint="#F44336"
            android:textSize="20dp"
            android:translationX="30dp" />
    </RadioGroup>

    <Button
        android:id="@+id/ques1Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:cornerRadius="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ques1RG" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Time Left: 180"
        android:textColor="#D2D6D8"
        android:textColorHighlight="#D2D6D8"
        android:textColorHint="#D2D6D8"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/ques1View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

</androidx.constraintlayout.widget.ConstraintLayout>